#!/bin/bash

  #############################################################
  # Name: buildMN_aux
  # Description: SCRIPT FOR LOCAL COMPSs BUILD in MareNostrum
  # Parameters: <targetDir>           Base Target Installation folder
  #
  # ATTENTION: DO NOT EXECUTE THIS FILE. IT IS AUTOMATICALLY
  #            EXECUTED FROM buildMN script
  #############################################################

  usage() {
    echo "Incorrect number of parameters"
    echo " Usage: buildMN5_aux <FullTargetPath>"
    echo " "
    exit 1
  }

  ####################
  # MAIN
  ####################
  # Get parameters
  if [ $# -ne 1 ]; then
    usage
  fi

  # SET SCRIPT VARIABLES
  targetDir=$1
  SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

  # DEFINE MODULES
  modules="intel/2023.2.0 impi/2021.11.0 mkl/2023.2.0 oneapi/2023.2.0 java-openjdk/11.0.18+10 pear-tools/ear-lite/5.0 papi/7.1.0"  # This impi version does not exist
  unload_before_python=""
  # Plain python modules:
  run_before_py3_modules="ignore"
  py3_modules="python/3.12.1"
  # Python modules with jupyter:
  # py3_modules="ANACONDA/5.1.0_py3"      # "ANACONDA/5.1.0.py3conda" # python 3.6.3
  run_before_py3_other_modules="module load intel/2023.2.0 impi/2021.11.0 mkl/2023.2.0 oneapi/2023.2.0 hdf5/1.14.1-2"
  py3_other_modules="python/3.11.5-gcc"  # python/3.8.1 pip version too old - does not support new installation standards.

  # DEFINE CONFIGURATION PARAMETERS
  # (Environment vars must be scaped to get the correct value if not it could take a value previous to load the modules)
  additionalExports='export CFLAGS="-I/usr/include/libxml2/ $CFLAGS"'

  additional_module_use_folder="ignore"
  queues_cfg="mn5_acc.cfg"
  extrae_with_openmpi="false"
  openmpi_version="/4.1.5"
  extrae_with_impi="true"
  impi_version="/2021.11.0"  # This impi version does not exist, but strangely compiles. If we define any of the existing impi installations it fails to compile due to fortran.
  autoparallel="false"
  c_binding="false"
  extrae_no_mpi="true"
  # CALL buildSC_aux
  "${SCRIPT_DIR}"/buildSC_aux "${targetDir}" "${modules}" "${unload_before_python}" "${run_before_py3_modules}" "${py3_modules}" "${run_before_py3_other_modules}" "${py3_other_modules}" "${additionalExports}" "${additional_module_use_folder}" "${queues_cfg}" "${extrae_with_openmpi}" "${openmpi_version}" "${extrae_with_impi}" "${impi_version}" "${autoparallel}" "${c_binding}" "${extrae_no_mpi}"
  ev=$?

  # End
  if [ $ev -ne 0 ]; then
    echo "ERROR: Exception in auxiliar script"
    exit $ev
  fi
  exit 0
